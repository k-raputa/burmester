<div class="header-desktop header-visibility-reference d-none d-xl-block">
    <div class="component-header-desktop"
         data-plugin="headerDesktop">
        <div class="header-main">
            <div class="container-fluid">
                <div class="header-container">
                    <div class="header-item"
                         itemscope
                         itemtype="http://schema.org/Brand">
                        <a class="header-logo"
                           href="{{ path('frontend.home.page') }}"
                           itemprop="url"
                           title="{{ "general.homeLink"|trans|striptags }}">
                            <meta content="{{ shopware.config.core.basicInformation.shopName }}" itemprop="name">
                            <meta content="img/logo.svg" itemprop="logo">
                            <i class="icon header-logo-image">
                                <svg class="svg-import">
                                    <use xlink:href="#icon-logo"/>
                                </svg>
                            </i>
                        </a>
                    </div>
                    <div class="header-item header-main-navigation">
                        {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/desktop/header-main-navigation.html.twig' with {
                            navigationTree: page.header.navigation.tree,
                            activePath: activePath
                        } only %}
                    </div>
                    <div class="header-item header-menu item-center">
                        <button type="button"
                                class="btn btn-menu action-open-search">
                            <i class="icon icon-magnifier">
                                <svg class="svg-import">
                                    <use xlink:href="#icon-magnifier"/>
                                </svg>
                            </i>
                        </button>

                        {# BURASMLP-271, disable shop-buttons
                        <div class="component-header-shopping-cart"
                             data-offcanvas-cart="true">
                            <a class="btn btn-menu  header-cart-btn header-actions-btn"
                               href="{{ path('frontend.checkout.cart.page') }}"
                               data-cart-widget="true"
                               title="{{ 'checkout.cartTitle'|trans|striptags }}"
                               aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
                                {% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
                            </a>
                        </div>

                        {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/desktop/header-account.html.twig' %}
                        #}

                        {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/header-language.html.twig' %}
                    </div>
                </div>
            </div>
        </div>

        <div class="header-search">
            {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/desktop/header-search.html.twig' %}
        </div>

        <div class="header-sub-navigation">
            <div class="component-header-desktop-sub-navigation theme-default"
                 data-plugin="headerDesktopSubNavigation">
                {% for treeItem in page.header.navigation.tree %}
                    {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/desktop/header-sub-navigation-item.html.twig'  with {
                        navigationTree: treeItem,
                        activePath: activePath
                    } only %}
                {% endfor %}
                <div class="navigation-shadow"></div>
            </div>
        </div>

        <div class="header-modal-navigation">
            <div class="component-header-desktop-modal-navigation theme-default"
                 data-plugin="headerDesktopModalNavigation">
                <div class="container-fluid">
                    <div class="modal-navigation-top-border"></div>
                    {% for treeItem in page.header.navigation.tree %}
                        {% for treeItem2 in treeItem.children %}
                            {% if treeItem2.children %}
                                {% sw_include '@UdgBurmesterTheme/storefront/udgburmestertheme/layout/header/desktop/header-modal-navigation-item.html.twig' with {
                                    navigationTree: treeItem2,
                                    activePath: activePath
                                } only %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="navigation-shadow"></div>
            </div>
        </div>
    </div>
</div>
