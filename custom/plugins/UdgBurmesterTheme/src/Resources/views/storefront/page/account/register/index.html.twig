{% sw_extends '@Storefront/storefront/page/account/register/index.html.twig' %}

{% block base_body_classes %}is-ctl-{{ controllerName|lower }} is-act-{{ controllerAction|lower }} theme-default register-theme {% endblock %}

{% block base_content %}
    <div class="cms-page">
        <div class="cms-sections">
            {{ block('page_account_register') }}
        </div>
    </div>
{% endblock %}

{% block page_account_register_login_container %}
    <div class="col-lg-4 offset-lg-1">
        {% sw_include '@UdgRegisterLogin/storefront/component/account/login.html.twig' with {
            'cardTitle': "account.loginHeader"|trans|sw_sanitize,
            'cardChapter': "account.loginSubmit"|trans|sw_sanitize
        } %}

        {{ block('page_account_register_advantages') }}
    </div>
{% endblock %}

{% block page_account_register_container %}
    <div class="col-lg-4 offset-lg-2">
        {% sw_include '@UdgRegisterLogin/storefront/component/account/register.html.twig' with {
            'cardTitle': "account.registerPersonalHeader"|trans|sw_sanitize,
            'cardChapter': "account.registerTitle"|trans|sw_sanitize
        } %}
    </div>
{% endblock %}
