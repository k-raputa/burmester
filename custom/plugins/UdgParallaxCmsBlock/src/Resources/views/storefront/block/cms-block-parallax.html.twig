{% block sw_cms_block_parallax %}

    <div class="component-image-text col-12"  data-plugin="parallaxEffect" >
        {% set columns = 2 %}
        {% set id = element.id %}

        <div class="row {% if 'image-right' in block.cssClass %}image-right{% endif %}">
            {% block block_parallax_left %}
                {% set element = block.slots.getSlot('left') %}

                <div class="col-image col-lg-5 col-md-6" data-cms-element-id="{{ id }}">
                    {% block block_parallax_left_inner %}
                        <figure>
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            {% if block.name|length > 0 %}
                                <figcaption class="text-xs">{{ block.name }}</figcaption>
                            {% endif %}
                        </figure>

                    {% endblock %}
                </div>
            {% endblock %}

            {% block block_parallax_right %}
                {% set element = block.slots.getSlot('right') %}

                <div class="col-text col-lg-4 col-md-5" data-cms-element-id="{{ id }}">
                    {% block block_parallax_right_inner %}
                        {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>

{% endblock %}

